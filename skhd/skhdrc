# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + alt - e : yabai -m space --balance

# hyper shortcuts
hyper - c : open /Applications/Google\ Chrome.app
hyper - b : open /Applications/Brave\ Browser.app
hyper - v : open /Applications/Visual\ Studio\ Code.app
hyper - a : open /Applications/Alacritty.app
hyper - m : open /Applications/Spotify.app
hyper - n : open /Applications/Notion.app
hyper - s : open /Applications/Slack.app
hyper - d : open /Applications/Calendar.app

# float / unfloat window and center on screen
alt - t : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2
